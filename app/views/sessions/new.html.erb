<h2 class="ui center aligned large header">
  Welcome! <br> Please Log in or Sign Up
</h2>

<div class="ui inverted blue segment">
  <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
    <div class="field">
      <%= f.label :username, "Username", class: "text" %>
      <%= f.text_field :username, placeholder: "Username" %>
    </div>
    <div class="field">
      <%= f.label :password, "Password", class: "text" %>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <%= f.button "Login", class: "ui teal submit button" %>
  <% end %>
  <div class="ui inverted divider"></div>
  <div> 
      <div class="ui teal big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
</div>